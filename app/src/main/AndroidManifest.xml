<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barcrawlr.barcrawlr">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smalllogo"
        android:label="@string/app_name"
        android:name=".BarCrawlrApplication"
        android:roundIcon="@drawable/smalllogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivty"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".buttonTest" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity android:name=".BarInfoPage" />
        <activity android:name=".FragmentInfo" />
        <activity android:name=".FragmentMaps" />
        <activity android:name=".FragmentPhotos"></activity>
    </application>

</manifest>